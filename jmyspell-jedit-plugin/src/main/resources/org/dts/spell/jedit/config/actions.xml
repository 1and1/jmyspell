<?xml version="1.0"?>
<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<!-- This file defines actions. Each action is a short snippet of
     BeanShell code that may be bound to a menu item or keystroke.

     Menu item labels for actions should be defined in properties named
     <action>.label.

     Shortcuts for actions should *not* be assigned by plugins. -->

<ACTIONS>
  <!-- Menu action for spell checking the current selection -->
  <ACTION NAME="jmyspell.spell-check">
    <CODE>
      org.dts.spell.jedit.JMySpellPlugin.staticSpellCheck(view);
    </CODE>
  </ACTION>

  <ACTION NAME="jmyspell.unload-dictionary">
    <CODE>
      org.dts.spell.jedit.JMySpellPlugin.unloadDictionary();
    </CODE>
  </ACTION>

  <ACTION NAME="jmyspell.reset-ignore-list">
    <CODE>
      org.dts.spell.jedit.JMySpellPlugin.resetSpellChecker();
    </CODE>
  </ACTION>
</ACTIONS>